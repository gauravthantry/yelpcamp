<% include ./partials/header %>
<div class="container">
    <div class="row">
        <div class="well">
        <form action="/reset" method="POST">
            <div class="form-group">
                <label for="newPassword">Password:</label>
                <input type="password" class="form-control" id="newpassword" name="newpassword"
                    placeholder="Enter Password" onchange='check_resetpass();'>
            </div>
            <div class="form-group">
                <label for="confirmpassword">Confirm Password:</label>
                <input type="password" class="form-control" id="confirmnewpassword" placeholder="Re-Enter Password">
            </div>
            <span id='message_reset'></span>
            <button type="submit" id="reset_submit" class="btn btn-primary">Submit</button>
            <span class="form-switch"><a href="/login"> Login</a> <span id="bar"></span></span>
        </form>
    </div>
</div>
</div>
<% include ./partials/footer %>