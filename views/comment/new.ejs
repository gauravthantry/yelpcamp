<% include ../partials/header %>

<div class="container">
  <div class="row">
    <h1 class="addHeader">Add a comment for <%= campground.name %></h1>
    <div id="formSpecs">
      <form action="/campgrounds/<%=campground._id %>/comment" method="POST">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" placeholder="Text">
        </div>
        <div class="form-group">
          <Button class="btn btn-lg btn-primary btn-block">Submit!</Button>
        </div>
      </form>
      <a href="/campgrounds/<%=campground._id %>">Go Back!</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>